<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskActivity">

    <ImageView
        android:layout_width="411dp"
        android:layout_height="486dp"
        android:background="@drawable/jobimg"
        android:scaleType="fitCenter"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ellipse2"
        android:drawableLeft="@drawable/ic_back"
        android:paddingLeft="7dp" />

    <View
        android:layout_width="56dp"
        android:layout_height="2dp"
        android:background="#808080"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="365dp"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="375dp"
        android:textSize="30sp"
        android:lineHeight="60dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"/>

    <TextView
        android:id="@+id/txt_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="390dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/poppins"
        android:lineHeight="36dp"
        android:textColor="#FA9857"
        android:textFontWeight="600"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="445dp"
        android:text="About"
        android:textSize="18sp"
        android:lineHeight="27dp"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:fontFamily="@font/poppins"/>

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="472dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/poppins"
        android:lineHeight="27dp"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="18sp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/ic_location"
        android:paddingLeft="7dp"/>

    <TextView
        android:id="@+id/txt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="105dp"
        android:layout_marginLeft="65dp"
        android:textSize="18sp"
        android:lineHeight="27dp"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:fontFamily="@font/poppins"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="120dp"
        android:drawableLeft="@drawable/ic_time"
        android:paddingLeft="8dp"/>

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="105dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:lineHeight="27dp"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:fontFamily="@font/poppins"/>

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="157dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/accept_btn"
        android:text="Accept"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textFontWeight="700"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_decline"
        android:layout_width="157dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/decline_btn"
        android:text="Decline"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textFontWeight="700"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"/>

</RelativeLayout>