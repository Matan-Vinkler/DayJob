<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="347dp"
    android:layout_height="138dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TaskFragment"
    app:cardCornerRadius="20dp"
    android:background="@color/white"
    android:layout_marginBottom="5dp"
    android:id="@+id/card_task">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:lineHeight="27dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textFontWeight="800"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/txt_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins"
            android:lineHeight="16dp"
            android:textColor="@color/black"
            android:textSize="11sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/task_image"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txt_helpers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_man"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txt_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginTop="45sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cash"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="13dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/btn_task"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="Read More >"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="13sp"
            android:fontFamily="@font/poppins"
            android:textColor="#143546"
            android:background="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>